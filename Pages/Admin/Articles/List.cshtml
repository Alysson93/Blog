@page
@model Blog.Pages.Admin.Articles.ListModel

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
  <div class="container">
    <h1>Articles</h1>
  </div>
</div>

<partial name="_Notification" />

<div class="container">
    @if (@Model.Articles.Count() > 0)
    {
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Title</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach(var article in Model.Articles)
            {
                <tr>
                    <td>@article.Id</td>
                    <td>@article.Title</td>
                    <td><a href="/admin/articles/edit/@article.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>
    } else
    {
        <p>No articles found</p>
    }
</div>